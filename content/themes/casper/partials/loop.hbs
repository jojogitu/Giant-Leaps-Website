{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<article class="{{post_class}} home">
  <a href="{{url}}"><section class="cd-intro home {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}"></section></a>
  <section class="post_header home">
      <div class="tag">{{tags separator=" "}}</div>
      <a href="{{url}}"><h1>{{title}}</h1></a>
      <div class="header_meta">{{#author}}by <a href="{{url}}">{{name}}</a> on {{/author}}<time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time></div>
  </section>
</article>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
